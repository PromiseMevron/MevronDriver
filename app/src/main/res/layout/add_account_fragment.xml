<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".cashout.ui.AddAccountFragment">

    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_back_button"
        android:background="@android:color/transparent"
        android:id="@+id/back_button"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toEndOf="@id/guideline1"/>

    <TextView
        android:id="@+id/duration_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:lineHeight="56dp"
        android:textAlignment="center"
        android:textColor="@color/grey_5"
        android:textFontWeight="600"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/guideline1"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toTopOf="@id/back_button"
        app:layout_constraintBottom_toBottomOf="@id/back_button"
        tools:targetApi="p"
        android:fontFamily="@font/poppins_semibold"
        android:text="@string/add_a_bank_account" />

    <TextView
        android:id="@+id/holder_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:lineHeight="56dp"
        android:textAlignment="center"
        android:textColor="@color/grey_3"
        android:textFontWeight="600"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/guideline1"
        app:layout_constraintTop_toBottomOf="@id/back_button"
        tools:targetApi="p"
        android:fontFamily="@font/poppins_semibold"
        android:text="@string/name_of_account_holder" />

    <EditText
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/holder_title"
        android:layout_width="0dp"
        android:paddingStart="@dimen/_10sdp"
        android:paddingEnd="@dimen/_10sdp"
        android:layout_marginTop="4dp"
        android:layout_height="52dp"
        android:imeOptions="actionNext"
        android:layout_weight="2"
        android:id="@+id/holder_field"
        android:background="@drawable/rounded_corner_field"
        app:layout_constraintStart_toEndOf="@+id/guideline1"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        android:textColor="#383838"
        android:inputType="textPersonName"/>


    <TextView
        android:id="@+id/routing_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:lineHeight="56dp"
        android:textAlignment="center"
        android:textColor="@color/grey_3"
        android:textFontWeight="600"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/guideline1"
        app:layout_constraintTop_toBottomOf="@id/holder_field"
        tools:targetApi="p"
        android:fontFamily="@font/poppins_semibold"
        android:text="@string/routing_number" />

    <EditText
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/routing_title"
        android:layout_width="0dp"
        android:paddingStart="@dimen/_10sdp"
        android:paddingEnd="@dimen/_10sdp"
        android:layout_marginTop="4dp"
        android:layout_height="52dp"
        android:imeOptions="actionNext"
        android:layout_weight="2"
        android:id="@+id/routing_field"
        android:background="@drawable/rounded_corner_field"
        app:layout_constraintStart_toEndOf="@+id/guideline1"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        android:textColor="#383838"
        android:inputType="textPersonName"/>

    <TextView
        android:id="@+id/number_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:lineHeight="56dp"
        android:textAlignment="center"
        android:textColor="@color/grey_3"
        android:textFontWeight="600"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/guideline1"
        app:layout_constraintTop_toBottomOf="@id/routing_field"
        tools:targetApi="p"
        android:fontFamily="@font/poppins_semibold"
        android:text="@string/bank_account_number" />

    <EditText
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/number_title"
        android:layout_width="0dp"
        android:paddingStart="@dimen/_10sdp"
        android:paddingEnd="@dimen/_10sdp"
        android:layout_marginTop="4dp"
        android:layout_height="52dp"
        android:imeOptions="actionNext"
        android:layout_weight="2"
        android:id="@+id/number_field"
        android:background="@drawable/rounded_corner_field"
        app:layout_constraintStart_toEndOf="@+id/guideline1"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        android:textColor="#383838"
        android:inputType="number"/>


    <TextView
        android:id="@+id/birth_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:lineHeight="56dp"
        android:textAlignment="center"
        android:textColor="@color/grey_3"
        android:textFontWeight="600"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/guideline1"
        app:layout_constraintTop_toBottomOf="@id/number_field"
        tools:targetApi="p"
        android:fontFamily="@font/poppins_semibold"
        android:text="@string/date_of_birth" />

    <EditText
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/birth_title"
        android:layout_width="0dp"
        android:paddingStart="@dimen/_10sdp"
        android:paddingEnd="@dimen/_10sdp"
        android:layout_marginTop="4dp"
        android:layout_height="52dp"
        android:imeOptions="actionNext"
        android:layout_weight="2"
        android:id="@+id/birth_field"
        android:focusable="false"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusableInTouchMode="false"
        android:background="@drawable/rounded_corner_field"
        app:layout_constraintStart_toEndOf="@+id/guideline1"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        android:textColor="#383838"
        android:inputType="date"/>

    <TextView
        android:id="@+id/address_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:lineHeight="56dp"
        android:textAlignment="center"
        android:textColor="@color/grey_3"
        android:textFontWeight="600"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/guideline1"
        app:layout_constraintTop_toBottomOf="@id/birth_field"
        tools:targetApi="p"
        android:fontFamily="@font/poppins_semibold"
        android:text="@string/address" />

    <EditText
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/address_title"
        android:layout_width="0dp"
        android:paddingStart="@dimen/_10sdp"
        android:paddingEnd="@dimen/_10sdp"
        android:layout_marginTop="4dp"
        android:layout_height="52dp"
        android:imeOptions="actionNext"
        android:layout_weight="2"
        android:id="@+id/address_field"
        android:background="@drawable/rounded_corner_field"
        app:layout_constraintStart_toEndOf="@+id/guideline1"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        android:textColor="#383838"
        android:inputType="textMultiLine"/>

    <TextView
        android:id="@+id/zip_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:lineHeight="56dp"
        android:textAlignment="center"
        android:textColor="@color/grey_3"
        android:textFontWeight="600"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/guideline1"
        app:layout_constraintTop_toBottomOf="@id/address_field"
        tools:targetApi="p"
        android:fontFamily="@font/poppins_semibold"
        android:text="@string/zipcode" />

    <EditText
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/zip_title"
        android:layout_width="0dp"
        android:paddingStart="@dimen/_10sdp"
        android:paddingEnd="@dimen/_10sdp"
        android:layout_marginTop="4dp"
        android:layout_height="52dp"
        android:imeOptions="actionNext"
        android:layout_weight="2"
        android:id="@+id/zip_field"
        android:background="@drawable/rounded_corner_field"
        app:layout_constraintStart_toEndOf="@+id/guideline1"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        android:textColor="#383838"
        android:inputType="text"/>

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/zip_field"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toEndOf="@+id/guideline1"
        android:textColor="@color/grey_3"
        android:checked="false"
        android:fontFamily="@font/poppins_semibold"
        android:text="@string/set_as_default_method_to_receive_payouts"
        android:id="@+id/make_default"/>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="0dp"
        android:layout_height="56dp"
        app:layout_constraintStart_toEndOf="@+id/guideline1"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toBottomOf="@id/make_default"
        android:layout_marginTop="60dp"
        android:background="#1F2A2A72"
        android:text="@string/submit"
        android:id="@+id/submit_button"
        android:textColor="#9c9c9c"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/submit_button"/>




    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.03333" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.96667" />


</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>