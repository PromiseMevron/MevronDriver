<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<androidx.coordinatorlayout.widget.CoordinatorLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<androidx.constraintlayout.widget.ConstraintLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".auth.AddVehicleFragment">

    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".auth.AccountCreationFragment">

            <ImageButton
                android:layout_width="@dimen/_45sdp"
                android:layout_height="@dimen/_45sdp"
                android:backgroundTint="@android:color/transparent"
                android:id="@+id/back_button"
                android:src="@drawable/ic_back_button"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginStart="@dimen/_15sdp"
                app:layout_constraintStart_toStartOf="parent"
                android:contentDescription="@string/back_button"/>

            <TextView
                android:id="@+id/text1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/driver_registration"
                android:fontFamily="@font/poppins_regular"
                android:textSize="@dimen/_14ssp"
                android:gravity="center"
                android:textColor="#383838"
                app:layout_constraintBottom_toBottomOf="@id/back_button"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/back_button"
                tools:targetApi="p" />

            <TextView
                android:id="@+id/text11"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/step_2_of_4"
                android:fontFamily="@font/poppins_regular"
                android:textSize="@dimen/_14ssp"
                android:gravity="center"
                android:textColor="#2A2A72"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginStart="@dimen/_14sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/back_button"
                tools:targetApi="p" />

            <TextView
                android:id="@+id/text12"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/add_your_vehicle"
                android:fontFamily="@font/poppins_regular"
                android:textSize="@dimen/_15ssp"
                android:gravity="center"
                android:textColor="#383838"
                android:textFontWeight="600"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginStart="@dimen/_14sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text11"
                tools:targetApi="p" />

            <TextView
                android:id="@+id/text13"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/your_vehicle_must_be_2005_or_newer_and_at_least_4_doors_and_not_salvaged"
                android:fontFamily="@font/poppins_regular"
                android:textSize="@dimen/_11ssp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="@dimen/_14sdp"
                android:textColor="#9c9c9c"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginStart="@dimen/_14sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text12"
                tools:targetApi="p" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#8a8a8a"
                android:textSize="@dimen/_10ssp"
                android:text="@string/make"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text13"
                android:layout_marginStart="@dimen/_14sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:id="@+id/name" />


            <EditText
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="@dimen/_14sdp"
                android:layout_marginEnd="@dimen/_14sdp"
                app:layout_constraintTop_toBottomOf="@id/name"
                android:layout_width="0dp"
                android:paddingStart="@dimen/_10sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_height="52dp"
                android:imeOptions="actionDone"
                android:focusableInTouchMode="false"
                android:layout_weight="2"
                android:id="@+id/rider_make"
                android:hint="e.g. Audi"
                android:background="@drawable/rounded_corner_field"
                android:textColor="#383838"
                android:inputType="textPersonName"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#8a8a8a"
                android:textSize="@dimen/_10ssp"
                android:text="@string/model"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rider_make"
                android:layout_marginStart="@dimen/_14sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:id="@+id/email" />


            <EditText
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="@dimen/_14sdp"
                android:layout_marginEnd="@dimen/_14sdp"
                app:layout_constraintTop_toBottomOf="@id/email"
                android:layout_width="0dp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_height="52dp"
                android:paddingStart="@dimen/_10sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:layout_weight="2"
                android:imeOptions="actionDone"
                android:focusableInTouchMode="false"
                android:id="@+id/rider_model"
                android:hint="e.g. S4 Avant"
                android:background="@drawable/rounded_corner_field"
                android:textColor="#383838"
                android:inputType="text"/>




            <LinearLayout
                android:id="@+id/linear_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rider_model"
                android:layout_marginEnd="@dimen/_14sdp"
                android:layout_marginStart="@dimen/_14sdp"
                android:layout_marginTop="@dimen/_20sdp">


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#8a8a8a"
                        android:textSize="@dimen/_10ssp"
                        android:text="@string/year"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:id="@+id/year_text" />

                    <EditText
                        android:id="@+id/year"
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/year_text"
                        android:paddingStart="@dimen/_10sdp"
                        android:paddingEnd="@dimen/_10sdp"
                        android:background="@drawable/rounded_corner_field"
                        android:textColor="#383838"
                        android:imeOptions="actionDone"
                        android:focusableInTouchMode="false"
                        android:hint="e.g. 2016"
                        android:inputType="number" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toEndOf="@id/year"
                        app:layout_constraintTop_toTopOf="@id/year"
                        app:layout_constraintBottom_toBottomOf="@id/year"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:src="@drawable/ic_year_ok"
                        android:visibility="invisible"
                        android:id="@+id/year_ok"/>

                </androidx.constraintlayout.widget.ConstraintLayout>



                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#8a8a8a"
                        android:textSize="@dimen/_10ssp"
                        android:text="@string/color"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"


                        android:id="@+id/color_text" />

                    <EditText
                        android:id="@+id/color"
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/color_text"
                        android:paddingStart="@dimen/_10sdp"
                        android:paddingEnd="@dimen/_10sdp"
                        android:imeOptions="actionDone"
                        android:focusableInTouchMode="false"
                        android:background="@drawable/rounded_corner_field"
                        android:textColor="#383838"
                        android:hint="e.g. Black"
                        android:inputType="text" />

                </androidx.constraintlayout.widget.ConstraintLayout>



            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#8a8a8a"
                android:textSize="@dimen/_10ssp"
                android:text="@string/licence_plate_number"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/linear_layout"
                android:layout_marginStart="@dimen/_14sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:id="@+id/city" />


            <EditText
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="@dimen/_14sdp"
                android:layout_marginEnd="@dimen/_14sdp"
                app:layout_constraintTop_toBottomOf="@id/city"
                android:layout_width="0dp"
                android:layout_marginTop="@dimen/_8sdp"
                android:paddingStart="@dimen/_10sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:layout_height="52dp"
                android:layout_weight="2"
                android:id="@+id/rider_plate"
                android:hint="e.g. 6WED298"
                android:background="@drawable/rounded_corner_field"
                android:textColor="#383838"
                android:inputType="text"/>


            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                app:backgroundTint="#1F2A2A72"
                android:textColor="#9C9C9C"
                android:textAllCaps="false"
                android:enabled="false"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:cornerRadius="@dimen/_4sdp"
                android:text="@string/continue_text"
                android:layout_marginEnd="@dimen/_14sdp"
                android:layout_marginStart="@dimen/_14sdp"
                android:layout_marginTop="@dimen/_70sdp"
                app:layout_constraintTop_toBottomOf="@id/rider_plate"
                android:id="@+id/add_vehicle"/>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
    <include
        android:visibility="visible"
        android:id="@+id/add_car_bottom"
        layout="@layout/car_add_items_bottom" />
    <include
        android:visibility="visible"
        android:id="@+id/add_car_model"
        layout="@layout/car_model_items_bottom" />

    <include
        android:visibility="visible"
        android:id="@+id/add_car_year"
        layout="@layout/car_year_items_bottom" />

    <include
        android:visibility="visible"
        android:id="@+id/add_color"
        layout="@layout/car_color_add" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>