<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bottomSheet"
        app:behavior_hideable="false"
        app:behavior_peekHeight="200dp"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_corner">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_handle"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:background="#1A0B973A"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/top_layer">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textAlignment="center"
                android:text="@string/ride_in_progress"
                android:fontFamily="@font/poppins_regular"
                android:textSize="@dimen/_13ssp"
                android:textColor="#0B973A"/>



        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/top_layer"
            android:textAlignment="center"
            android:text="16 min  â€¢  2.3km"
            android:id="@+id/time_distance"
            android:fontFamily="@font/poppins_regular"
            android:textSize="@dimen/_17ssp"
            android:textFontWeight="600"
            android:layout_marginTop="@dimen/_14sdp"
            android:textColor="#383838"
            tools:targetApi="p" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/time_distance"
            android:textAlignment="center"
            android:id="@+id/ride_in_progress"
            android:layout_marginTop="@dimen/_1sdp"
            android:text="@string/ride_in_progress"
            android:fontFamily="@font/poppins_regular"
            android:textSize="@dimen/_11ssp"
            android:textColor="#666666"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@id/ride_in_progress"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginStart="@dimen/_14sdp"
            android:layout_marginEnd="@dimen/_14sdp"
            android:orientation="horizontal"
            android:background="#F2F2F2"
            android:id="@+id/divider1"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:src="@drawable/profile_dummy"
            android:id="@+id/rider_profile"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider1"
            android:layout_marginTop="@dimen/_18sdp"
            android:layout_marginStart="@dimen/_14sdp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
           app:layout_constraintStart_toEndOf="@id/rider_profile"
            app:layout_constraintTop_toTopOf="@id/rider_profile"
            app:layout_constraintBottom_toBottomOf="@id/rider_profile"
            android:textAlignment="center"
            android:id="@+id/ride_name"
            android:layout_marginStart="@dimen/_14sdp"
            android:layout_marginTop="@dimen/_1sdp"
            android:text="@string/ride_in_progress"
            android:fontFamily="@font/poppins_regular"
            android:textSize="@dimen/_13ssp"
            android:textColor="#666666"/>


        <LinearLayout
            android:layout_width="@dimen/_62sdp"
            android:layout_height="@dimen/_25sdp"
            android:orientation="horizontal"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="@id/rider_profile"
            app:layout_constraintBottom_toBottomOf="@id/rider_profile"
            android:background="@drawable/rounded_corner_rating"
           android:layout_marginEnd="@dimen/_14sdp"
            app:layout_constraintEnd_toEndOf="parent"

            android:layout_marginTop="-10dp">

            <ImageView
                android:layout_width="@dimen/_8sdp"
                android:layout_height="@dimen/_8sdp"
                android:src="@drawable/ic_star"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="2sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4.5"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/poppins_regular"
                android:textSize="@dimen/_11ssp"
                android:textColor="#383838"
                android:id="@+id/user_rating"
                tools:targetApi="p" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@id/rider_profile"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginStart="@dimen/_14sdp"
            android:layout_marginEnd="@dimen/_14sdp"
            android:orientation="horizontal"
            android:background="#F2F2F2"
            android:id="@+id/divider2"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/_14sdp"
            app:layout_constraintTop_toBottomOf="@id/divider2"
            android:textAlignment="center"
            android:text="@string/ride_details"
            android:id="@+id/ride_detail"
            android:fontFamily="@font/poppins_regular"
            android:textSize="@dimen/_17ssp"
            android:textFontWeight="600"
            android:layout_marginTop="@dimen/_14sdp"
            android:textColor="#383838"
            tools:targetApi="p" />



        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_stop_new_ride"
            app:layout_constraintTop_toBottomOf="@id/ride_detail"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_14sdp"
            android:layout_marginBottom="@dimen/_14sdp"
            android:id="@+id/stop_new_ride"/>

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_cancel_on_ride"
            app:layout_constraintTop_toBottomOf="@id/stop_new_ride"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_14sdp"
            android:layout_marginBottom="@dimen/_14sdp"
            android:id="@+id/cancel_on_ride"/>


</androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>