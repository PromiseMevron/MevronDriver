<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">



<ScrollView

    android:layout_width="match_parent"
    android:layout_height="match_parent">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".authentication.ui.createaccount.AccountCreationFragment">

    <ImageButton
        android:layout_width="@dimen/_45sdp"
        android:layout_height="@dimen/_45sdp"
        android:backgroundTint="@android:color/transparent"
        android:id="@+id/back_button"
        android:src="@drawable/ic_back_button"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginStart="@dimen/_15sdp"
        app:layout_constraintStart_toStartOf="parent"
        android:contentDescription="@string/back_button"/>

    <TextView
        android:id="@+id/text1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/create_an_account"
        android:fontFamily="@font/poppins_regular"
        android:textSize="@dimen/_14ssp"
        android:gravity="center"
        android:textColor="#383838"
        app:layout_constraintBottom_toBottomOf="@id/back_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/back_button"
        tools:targetApi="p" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#8a8a8a"
        android:textSize="@dimen/_10ssp"
        android:text="@string/name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/back_button"
        android:layout_marginStart="@dimen/_14sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:id="@+id/name" />


    <EditText
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="@dimen/_14sdp"
        android:layout_marginEnd="@dimen/_14sdp"
        app:layout_constraintTop_toBottomOf="@id/name"
        android:layout_width="0dp"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_height="52dp"
        android:paddingStart="@dimen/_10sdp"
        android:paddingEnd="@dimen/_10sdp"
        android:layout_weight="2"
        android:id="@+id/rider_name"
        android:hint="@string/e_g_john_doe"
        android:background="@drawable/rounded_corner_field"
        android:textColor="#383838"
        android:inputType="textPersonName"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#8a8a8a"
        android:textSize="@dimen/_10ssp"
        android:text="@string/email"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rider_name"
        android:layout_marginStart="@dimen/_14sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:id="@+id/email" />


    <EditText
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="@dimen/_14sdp"
        android:layout_marginEnd="@dimen/_14sdp"
        app:layout_constraintTop_toBottomOf="@id/email"
        android:layout_width="0dp"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_height="52dp"
        android:layout_weight="2"
        android:paddingStart="@dimen/_10sdp"
        android:paddingEnd="@dimen/_10sdp"
        android:id="@+id/rider_email"
        android:hint="@string/e_g_abc_email_com"
        android:background="@drawable/rounded_corner_field"
        android:textColor="#383838"
        android:inputType="textEmailAddress"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#8a8a8a"
        android:textSize="@dimen/_10ssp"
        android:text="@string/phone_number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rider_email"
        android:layout_marginStart="@dimen/_14sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:id="@+id/phone" />

    <LinearLayout
        android:id="@+id/linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/phone"
        android:layout_marginEnd="@dimen/_14sdp"
        android:layout_marginStart="@dimen/_14sdp"
        android:layout_marginTop="@dimen/_8sdp">
<!--
        <com.hbb20.CountryCodePicker
            android:layout_height="52dp"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:background="@drawable/rounded_corner_field"
            android:id="@+id/country_picker"
            android:layout_marginEnd="@dimen/_5sdp"
            app:ccp_autoDetectCountry="true"
            app:ccp_autoFormatNumber="true"/>

        <EditText
            android:id="@+id/phone_number"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_weight="4"
            android:background="@drawable/rounded_corner_field"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:textColor="#383838"
            android:hint="845 647 3215"
            android:inputType="phone" />-->


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_weight="1.3"
            android:id="@+id/ccp_layout"
            android:background="@drawable/rounded_corner_field">

            <com.hbb20.CountryCodePicker
                android:id="@+id/country_picker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_weight="2"
                android:background="@android:color/transparent"
                android:layout_gravity="center_vertical"
                app:ccp_showNameCode="false"
                android:clickable="false"
                app:ccp_clickable="false"
                app:ccp_showPhoneCode="false"
                app:ccp_autoDetectCountry="true"
                app:ccp_autoFormatNumber="true" />

        </androidx.constraintlayout.widget.ConstraintLayout>



        <EditText
            android:id="@+id/phone_number"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:fontFamily="@font/poppins_regular"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_weight="4"
            android:enabled="false"
            android:paddingStart="@dimen/_10ssp"
            android:paddingEnd="@dimen/_10ssp"
            android:editable="false"
            android:focusable="false"
            android:clickable="false"
            android:background="@drawable/rounded_corner_field"
            android:textColor="#626262"
            android:hint="845 647 3215"
            android:inputType="none" />


    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#8a8a8a"
        android:textSize="@dimen/_10ssp"
        android:text="@string/city"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linear_layout"
        android:layout_marginStart="@dimen/_14sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:id="@+id/licence_plate_number_text_view" />


    <EditText
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="@dimen/_14sdp"
        android:layout_marginEnd="@dimen/_14sdp"
        app:layout_constraintTop_toBottomOf="@id/licence_plate_number_text_view"
        android:layout_width="0dp"
        android:layout_marginTop="@dimen/_8sdp"
        android:paddingStart="@dimen/_10sdp"
        android:paddingEnd="@dimen/_10sdp"
        android:layout_height="52dp"
        android:layout_weight="2"
        android:id="@+id/city_rider"
        android:hint="Lagos"
        android:background="@drawable/rounded_corner_field"
        android:textColor="#383838"
        android:inputType="text"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#8a8a8a"
        android:textSize="@dimen/_10ssp"
        android:text="@string/referal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/city_rider"
        android:layout_marginStart="@dimen/_14sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:id="@+id/referal" />


    <EditText
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="@dimen/_14sdp"
        android:layout_marginEnd="@dimen/_14sdp"
        app:layout_constraintTop_toBottomOf="@id/referal"
        android:layout_width="0dp"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_height="52dp"
        android:layout_weight="2"

        android:id="@+id/referal_field"
        android:hint=""
        android:paddingStart="@dimen/_10sdp"
        android:paddingEnd="@dimen/_10sdp"
        android:background="@drawable/rounded_corner_field"
        android:textColor="#383838" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#25255A"
        android:textSize="@dimen/_10ssp"
        android:text="By continuing, I agree to the terms of use &amp; privacy policy."
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/referal_field"
        android:layout_marginStart="@dimen/_14sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:id="@+id/terms" />

    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_height="@dimen/_58sdp"
        app:backgroundTint="#1F2A2A72"
        android:textColor="#9C9C9C"
        android:textAllCaps="false"
        android:enabled="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cornerRadius="@dimen/_4sdp"
        android:text="@string/create_an_account"
        android:layout_marginEnd="@dimen/_14sdp"
        android:layout_marginStart="@dimen/_14sdp"
        android:layout_marginTop="@dimen/_70sdp"
        app:layout_constraintTop_toBottomOf="@id/terms"
        android:id="@+id/create_account"/>


</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>

</layout>